{
  "Logging": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System.Net.Http.HttpClient.nemlig": "Warning",
        "Microsoft.Extensions.Http": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": { "OutputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ssK} {Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}" }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "MBW.Nemlig2MQTT"
    }
  },
  "MQTT": {
    "Server": "mqtt-server",
    "Port": 1883
  },
  "HASS": {
    "DiscoveryPrefix": "homeassistant",
    "TopicPrefix": "nemlig",
    "EnableHASSDiscovery": true
  },
  "Nemlig": {
    "Username": "MyUser",
    "Password": "MyPass",
    "CheckInterval": "01:00:00"
  },
  "Proxy": {
    "Uri": null
  }
}